{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "homepage_url": "http://Q-note.virts.app",
  "description": "书卷多情似故人，晨昏忧乐每相亲。眼前直下三千字，胸次全无一点尘。",
  "default_locale": "en",
  "permissions": [
    "<all_urls>",
    "*://*/*",
    "storage",
    "tabs"
  ],
  "icons": {
    "16": "icons/Icon16.png",
    "128": "icons/Icon128.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "__MSG_extName__",
    "default_icon": {
      "32": "icons/Icon32.png"
    }
  },
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "chrome_style": false
  }
}